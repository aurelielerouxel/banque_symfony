{% extends 'template.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block main %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Inscription</h1>

    {{ form_start(registrationForm) }}
    {{ form_row(registrationForm.firstname, {
        label: 'Prénom'
    }) }}
    {{ form_row(registrationForm.lastname, {
        label: 'Nom'
    }) }}
    {{ form_row(registrationForm.birth_date, {
        label: 'Date de naissance'
    }) }}
    {{ form_row(registrationForm.adress, {
        label: 'Adresse'
    }) }}
    {{ form_row(registrationForm.postal_code, {
        label: 'Code postal'
    }) }}
    {{ form_row(registrationForm.city, {
        label: 'Ville'
    }) }}
    {{ form_row(registrationForm.email) }}
    {{ form_row(registrationForm.plainPassword, {
        label: 'Mot de passe'
    }) }}
    {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn btn-lg btn-primary">S'inscrire</button>
    {{ form_end(registrationForm) }}
    <p>Vous avez déjà un compte ? Cliquez <a href="{{path("app_login")}}">ICI</a> pour vous connecter.</p>
{% endblock %}
